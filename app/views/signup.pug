extends layout

block content
 .main.container
  .row
   .col-md-6.col-md-offset-3
    h1.display-4.m-b-2 Register here
    form(method='POST' action='/userdashboard')
     div.form-group
      label(for='first_name') First Name  
      input.form-control(type='text' id='first_name' placeholder='first_name' name='first_name')
     div.form-group
      label(for='last_name') Last Name  
      input.form-control(type='text' id='last_name' placeholder='last_name' name='last_name')
     div.form-group
      label(for='email') Email
      input.form-control(type='text' id='email' placeholder='email' name='email')
     div.form-group
      label(for='username') Username  
      input.form-control(type='text' id='username' placeholder='username' name='username')
     div.form-group
      label(for='password') Password  
      input.form-control(type='password' id='password' placeholder='password' name='password')
     button.btn.btn-primary(type='submit') Sign Up 